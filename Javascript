<body>
    <script>
        var i;
        var n = 100
        document.writeln("all even nuber prints for 1 to 100")
        document.writeln("<br>")
        

        for (i = 1; i <= n; i++) {
            if (i % 2 == 0) {
                document.writeln(i)
                document.writeln("<br>")
            }
        }



    </script>
</body>

